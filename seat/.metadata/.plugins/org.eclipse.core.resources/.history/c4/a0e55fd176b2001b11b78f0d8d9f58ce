package seatingTable;

import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class srZone extends JPanel {

	srZone(JFrame frame) {
		setBounds(20, 130, 660, 870);
		setLayout(null);

		seatingImage seatImg = new seatingImage(new ImageIcon("./image/cf_zone_1.jpg").getImage());
		this.add(seatImg);

		this.setVisible(false);
	}
	
	void btn(JButton[] btn, JPanel srZone) {
		btn[0] = new JButton("1");
		btn[0].addActionListener(new seatButton(btn[0]));
		btn[0].setBounds(29, 40, 65, 65);
		cfZone.add(btn[0]);

		btn[1] = new JButton("2");
		btn[1].addActionListener(new seatButton(btn[1]));
		btn[1].setBounds(29, 152, 65, 65);
		cfZone.add(btn[1]);
		
		
	}
	
}
